void setup() {
  Serial.begin(115200);
 preferences.begin("gpio",false);
  digitalWrite(Relay, LOW);
  digitalWrite(Pump, LOW);
  digitalWrite(rw,LOW);
  pinMode(Relay, OUTPUT);
  pinMode(Pump, OUTPUT);
  pinMode(button1,INPUT);
  pinMode(button2,INPUT);
  
WiFi.begin(ssid, password);
   Serial.print("Connecting to Wifi..");
   
   while (WiFi.status() != WL_CONNECTED) {
        Serial.print('.');
        delay(1000);
    }
   Serial.println("connected");
   Serial.println(WiFi.localIP());
   delay(1000);
 Firebase.begin(FIREBASE_HOST,FIREBASE_AUTH );
 
int read_value1=preferences.getInt("state1",i);
int read_value2=preferences.getInt("state2",k);
Serial.println(read_value1);
Serial.println(read_value2);
i=read_value1;
k=read_value2;
lcd.begin(8,1);
 lcd.clear();

}

void loop() {
  
 if((j==0 && m==0  )||(j==0&&m==2  )){
    
     val1=analogRead(analogPin1);
 V1=val1*3.3/(4095*MF);
 ITS1C=(4*V1/0.00385)/(3.3-2*V1);
  
  ITS1=(9*ITS1C/5)+32;
  
  Serial.print("V1:");
  Serial.println( V1,4);
  Serial.print("ITS1C: ");
  Serial.print( ITS1C);
  Serial.println( "C");
  Serial.print(" ITS1 :");
  Serial.print( ITS1);
  Serial.println( "F");
   Serial.println();
   
  if((j==0 && m==0 )||(j==0&&m==2  )){
   lcd.clear();
  lcd.print("T1:");
  lcd.print(ITS1);
  lcd.print("F");
  Firebase.setInt(firebasedata,"/LCD/T1",ITS1);
  
  if(ITS1>=i && ITS1<=k) {
    digitalWrite(Relay,HIGH);
  }
  else{
    digitalWrite(Relay,LOW);
  }
M1();
     }
 

    
 val2=analogRead(analogPin2);
  V2=val2*3.3/(4095*MF);
  ITS2C=(4*V2/0.00385)/(3.3-2*V2);
