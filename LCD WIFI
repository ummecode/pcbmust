    digitalWrite(Pump,LOW);
  }
  M1();
    
  }
     
  if((digitalRead(Relay)==1&& j==0&&m==0)||(digitalRead(Relay)==1&& j==0&&m==2 ) )
  {
    Serial.println("RELAY ON");
    lcd.clear();
 lcd.print("RELAY ON");
Firebase.setString(firebasedata,"/LCD/RELAY","ON");
  
   
 M1();
